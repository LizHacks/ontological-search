{
  "name": "ontology_service",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "repository": "https://github.com/repositive/ontology_service",
  "scripts": {
    "start": "node dist/index.js",
    "startDev": "nodemon --watch src/ --watch package.json -e ts,json -q -x 'rm -fr dist && echo \"\\n============\\nCOMPILING...\\n============\\n\\n\" && tsc --outDir dist || return 0 && node .'",
    "make": "rm -fr dist && tsc",
    "test": "nyc --all --reporter lcov ava-ts --verbose",
    "testDev": "nyc --reporter lcov ava-ts --watch",
    "lint": "tslint --project tsconfig.json",
    "coverage": "nyc check-coverage --lines 80 --functions 80 --branches 80",
    "apigen": "apigen ts -o src/openapi"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "dist"
    ],
    "exec": "ts-node src/index.ts | pino"
  },
  "ava": {
    "sources": [
      "src/**/*.ts"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@repositive/iris": "^1.0.0-alpha.8",
    "config": "1.30.0",
    "hapi": "17.8.1",
    "node-fetch": "^2.1.2",
    "pg": "^7.4.1",
    "pino": "4.16.1",
    "ramda": "0.25.0",
    "uuid": "3.2.1"
  },
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/hapi": "17.8.0",
    "@types/node": "10.12.12",
    "@types/node-fetch": "^1.6.9",
    "@types/pg": "7.4.11",
    "@types/pino": "4.7.1",
    "@types/ramda": "^0.25.32",
    "@types/uuid": "3.4.3",
    "@types/yamljs": "^0.2.30",
    "ava": "^1.0.0-beta.5.1",
    "ava-ts": "^0.24.6",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "sinon": "^6.0.0",
    "ts-node": "7.0.1",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "3.1.4"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage",
      "dist",
      "**/*.d.ts",
      "**/*.test.ts"
    ]
  }
}
